{{> header}}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="{{book.image}}" class="img-fluid" alt="{{book.title}}">
        </div>
        <div class="col-md-8">
            <h2>{{book.title}}</h2>
            <p><strong>Author:</strong> {{book.author}}</p>
            <p>{{book.description}}</p>
            <a href="/" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>
{{> footer}}
